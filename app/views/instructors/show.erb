<!-- How do I access my courses? -->

<h4>Your courses:</h4>

<ul>

<% @instructor.courses.each do |course| %>
  <a href="/courses/<%= course.id %>"><%= course.name %></a>
  <ul>
    <% course.students.each do |student| %>
      <li><%= student.name %></li>
    <% end %>
  </ul>
<% end %>

</ul>
